<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#DAA2A2"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:text="Alarm!"
        android:id="@+id/button_alarm"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/send_sms_btn"

        />
    <Button

        android:text="Call Police!"
        android:id="@+id/button_callPolice"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textColor="#ffff"
        android:layout_marginTop="20dp"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textAllCaps="false"

        android:background="@drawable/send_sms_btn"

        />


    <Button

        android:text="Record Video!"
        android:id="@+id/button_recordVideo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/send_sms_btn"

        />



    <Button

        android:text="Send Location!"
        android:id="@+id/button_sendLocation"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/send_sms_btn"

        />

    <Button

        android:text="Tips and Tricks"
        android:id="@+id/button_tipsTricks"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/send_sms_btn"

        />
    <Button

        android:text="Laws regarding Women"
        android:id="@+id/button_law"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffff"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/send_sms_btn"

        />
    <Button

        android:text="Logout"
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#ffff"
        android:background="#6F2B2B"
        android:textSize="24dp"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        android:onClick="logout"

        />

</LinearLayout>